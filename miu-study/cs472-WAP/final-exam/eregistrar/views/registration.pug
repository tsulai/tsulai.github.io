    <main>
        <div style="padding-top: 1em;" class="container">
            <!-- TODO: Add main content here -->
            <h3>Registration</h3>
            <hr>
            <form id="frmRegistration" action="/registration" method="POST">
            
                <div class="form-group">
                    <label for="txtStudentId">*Student ID Number:</label>
                    <input type="text" name="txtStudentId" class="form-control" id="txtStudentId" required placeholder="XXX-XX-XXXX" autofocus  pattern="\d{3}-\d{2}-\d{4}">
                    <span class="input-note">Enter the Student ID Number (in the format shown)</span>
                </div>
                <div class="form-group">
                    <label for="txtFullName">*Full Name:</label>
                    <input type="text" name="txtFullName" class="form-control" id="txtFullName" required placeholder="Enter your Full Name">
                    <span class="input-note">Enter the Student's Full Name as printed on the University-issued ID Card</span>
                </div>    
                <div class="form-group">
                    <label for="ddlLvlOfStudy">*Level of study:</label>
                    <select name="ddlLvlOfStudy" id="ddlLvlOfStudy" required>
                        <option value="">Select...</option>
                        <option value="Graduate">Graduate</option>
                        <option value="Undergraduate">Undergraduate</option>
                    </select>
                    <span class="input-note">Select the Level of study</span>
                </div>
                <div class="ftr-btn-grp">
                    <button type="reset" class="ftr-btn-reset">Reset</button>        
                    <button type="submit" class="ftr-btn-register">Register Student</button>
                    </div>         
            </div>
        </form>
        <div class="container">
            <table class="table table-striped" id="tblAccounts">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Student ID</th>
                            <th scope="col">Full Name</th>
                            <th scope="col">Level of Study</th>
                        </tr>
                    </thead>
                    <tbody>
